@model IEnumerable<Products.Models.Product>

@{
    ViewBag.Title = "Index";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ccc;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #f5f5f5;
    }

    tr:nth-child(even) {
        background-color: #fafafa;
    }

    tr:hover {
        background-color: #f1f1f1;
    }
</style>

@if (TempData["Success"] != null)
{
    <div style="color: green">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div style="color: red">@TempData["Error"]</div>
}

<h2>Product List</h2>

<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.product_id</td>
            <td>@item.product_name</td>
            <td>@item.product_quantity</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.product_id })
            </td>
        </tr>
    }
</table>

<p>@Html.ActionLink("Create New Product", "Create")</p>
