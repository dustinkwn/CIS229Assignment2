@model Products.Models.Product

@{
    ViewBag.Title = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <strong>Name:</strong> @Model.product_name <br />
    <strong>Quantity:</strong> @Model.product_quantity <br />
    <strong>Customer ID:</strong> @Model.customer_id <br />
</div>

@using (Html.BeginForm("Delete", "Products", FormMethod.Post))
{
    @Html.HiddenFor(model => model.product_id)
    <button type="submit">Delete</button>
}